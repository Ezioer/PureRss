<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/bg_dialog_four"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:text="分组"
        android:textAppearance="@style/TextAppearance.Owl.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="10dp"
        android:hint="分组"
        android:textAppearance="@style/TextAppearance.Owl.Subtitle1"
        android:id="@+id/et_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_folder"
        app:layout_constraintRight_toLeftOf="@id/tv_ok"
        android:textColor="@color/c_008f68"
        android:text="取消"
        android:padding="10dp"
        android:background="?android:selectableItemBackground"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_folder"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/c_008f68"
        android:text="确定"
        android:padding="10dp"
        android:background="?android:selectableItemBackground"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>