<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.zxq.purerss.data.entity.RssItem" />
        <variable
            name="clickHandle"
            type="com.zxq.purerss.listener.ItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:onClick="@{(v) -> clickHandle.onClick(v, item)}"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tv_title"
            android:text="@{item.title}"
            tools:text="幕后｜采访《马卡龙玩图》：用优秀的 AI 技术和创作"
            android:textAppearance="@style/TextAppearance.Owl.Headline6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_pic"
            app:layout_constraintRight_toLeftOf="@id/iv_pic"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_pic"
            app:imageUrl="@{item.albumPic}"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="120dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/tv_author"
            tools:text="by  testtest /16:45"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:text='@{"by   "+item.author+"/"+item.pubdate}'
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_pic"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.Owl.Subtitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <View
            app:layout_constraintTop_toBottomOf="@id/iv_pic"
            android:layout_marginTop="10dp"
            android:id="@+id/view_line"
            android:background="#efefef"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>