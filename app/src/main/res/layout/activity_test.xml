        android:id="@+id/clockview"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        android:text="@string/gamenoti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintTop_toBottomOf="@id/clockview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="生"
        android:id="@+id/btn_live"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/clockview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_below="@id/clockview"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/clockview"
        app:layout_constraintLeft_toRightOf="@id/btn_live"
        app:layout_constraintRight_toLeftOf="@id/btn_die"
        android:hint="输入初始细胞位置"
        android:id="@+id/et_cellindex"
        android:textSize="14sp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <Button
        android:text="死"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clockview"
        android:id="@+id/btn_die"
        android:layout_toRightOf="@id/et_cellindex"
        android:layout_below="@id/clockview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="开始"
        app:layout_constraintTop_toBottomOf="@id/et_cellindex"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btn_start"
        android:layout_below="@id/et_cellindex"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->
