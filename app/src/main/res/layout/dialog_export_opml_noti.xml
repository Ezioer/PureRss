<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/bg_dialog_four"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:text="导出opml文件"
        android:textAppearance="@style/TextAppearance.Owl.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/noti"
        android:text="opml文件可以导入导出rss数据，文件位于Android/data/com.zxq.purerss/file/purerss_opml.xml，卸载应用会清空该目录，请及时保存"
        android:textAppearance="@style/TextAppearance.Owl.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/noti"
        android:text="不再提醒"
        android:id="@+id/cb_nonoti"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ok"
        app:layout_constraintTop_toTopOf="@id/cb_nonoti"
        app:layout_constraintBottom_toBottomOf="@id/cb_nonoti"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/c_008f68"
        android:text="确定"
        android:padding="10dp"
        android:background="?android:selectableItemBackground"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>