<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:src="@drawable/rss_100px"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv_logo_right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_logo"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.6"
            android:src="@drawable/rss_100px"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:id="@+id/ll_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_p"
                android:text="P"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.Owl.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_u"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:text="u"
                android:textAppearance="@style/TextAppearance.Owl.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_r"
                android:text="r"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.Owl.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_e"
                android:text="e"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.Owl.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_rr"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:text="R"
                android:textAppearance="@style/TextAppearance.Owl.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_s"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:text="s"
                android:textAppearance="@style/TextAppearance.Owl.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_ss"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:text="s"
                android:textAppearance="@style/TextAppearance.Owl.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_appfeature"
            android:text="Simple   Pure   Beautiful"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_name"
            android:textAppearance="@style/TextAppearance.Owl.Headline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>