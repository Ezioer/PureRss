<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/bg"
        android:id="@+id/iv_left_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:background="@drawable/bg_chat_content"
        android:id="@+id/tv_left_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="1111111"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_left_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_left_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_left_avatar"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>